<div class="session_container">

  <h1>Pasame tu Usuario y Contraseña Cabrón</h1>

  <div class="form">
    <%= form_tag do %>
      <div class="">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
      <div class="">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div class="session_buttons">
        <%= submit_tag "Log In", class: "btn btn-success" %>
        or
        <%= link_to 'Register', register_path, class: "btn btn-default" %>
      </div>
  </div>

    <% end %>
</div>
